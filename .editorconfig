root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{java,kt,kts}]
indent_size = 4
max_line_length = 120

[*.{c,h}]
indent_size = 4
max_line_length = 100

[*.py]
indent_size = 4
max_line_length = 88

[*.{xml,gradle}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
